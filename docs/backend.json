
{
  "entities": {
    "UserRank": {
      "title": "UserRank",
      "type": "object",
      "description": "Stores user ranking information for the VectorZen app.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User."
        },
        "username": {
            "type": "string",
            "description": "The user's display name, 'Anonymous' for anonymous users."
        },
        "score": {
          "type": "number",
          "description": "The user's score in the VectorZen game."
        },
        "lastUpdated": {
          "type": "string",
          "description": "Timestamp of the last time the user's score/rank was updated.",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "username",
        "score",
        "lastUpdated"
      ]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the VectorZen app.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        }
      },
      "required": [
        "id"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
      "collections": [
        {
            "path": "/userRanks",
            "schema": {
                "$ref": "#/entities/UserRank"
            },
            "description": "Stores rankings for all users."
        }
      ]
  }
}
