
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Game Settings: Allow anyone to read, but only the admin to write.
    match /gameSettings/{gameSettingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';
    }

    // User Ranks: Allow anyone to read, and any authenticated user to create their own rank.
    // Users can only update or delete their own scores.
    match /userRanks/{rankId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Algebra Ranks: Same rules as userRanks.
    match /algebraRanks/{rankId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Equation Ranks: Same rules as userRanks.
    match /equationRanks/{rankId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
