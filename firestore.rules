rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Game settings are publicly readable, but only writable by the admin.
    match /gameSettings/{gameId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';
    }

    // --- Leaderboard Rules ---

    // VectorZen Leaderboard
    match /userRanks/{userId} {
      // Anyone can read the leaderboard.
      allow list: if true;
      // Only the authenticated user can create or update their own score.
      allow write: if request.auth != null && request.auth.uid == userId;
      // Admin can delete scores.
      allow delete: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';
    }

    // Algebra Arena Leaderboard
    match /algebraRanks/{userId} {
      allow list: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';
    }

    // Equation Equilibrium Leaderboard
    match /equationRanks/{userId} {
      allow list: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';
    }
  }
}
