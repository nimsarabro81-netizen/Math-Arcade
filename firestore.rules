rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Game settings can be read by anyone, but only written by the admin.
    match /gameSettings/{gameId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';
    }

    // Leaderboard collections
    match /(userRanks|algebraRanks|equationRanks)/{rankId} {
      // Anyone can read the leaderboards.
      allow list, get: if true;
      
      // Only authenticated users can create their own score.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Only the admin can delete scores.
      allow delete: if request.auth != null && request.auth.token.email == 'nimsarabro81@gmail.com';

      // No one can update scores directly to prevent tampering. New scores should be new documents.
      allow update: if false;
    }
  }
}
