
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to the user ranks for the leaderboard
    match /userRanks/{userRankId} {
      allow read: if true;
      // Allow users to create their own rank entry, but not edit others'
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Users should not be able to update or delete ranks directly
      allow update, delete: if false;
    }
  }
}
